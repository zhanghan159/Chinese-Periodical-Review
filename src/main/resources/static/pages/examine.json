{
  "type": "page",
  "body": {
    "type": "crud",
    "mode": "table",
    "api": {
      "method": "post",
      "url": "http://localhost:8080/periodical/queryAll.do",
      "data":{
        "page":"${page}",
        "pageSize":"${perPage|toInt}",
        "filterParams":[
          {
            "name": "periodicalId",
            "relation": "=",
            "value": "${periodicalId|toInt}"
          }
        ]
      }
    },
    "filter": {
      "title": "查找",
      "controls": [
        {
          "type": "text",
          "label":"期刊id",
          "name":"periodicalId"
        },
        {
          "type": "submit",
          "label": "搜索",
          "level": "primary"
        },
        {
          "type": "reset",
          "label": "重置",
          "level": "info"
        }
      ]
    },
    "footerToolbar": [
      "switch-per-page",
      {
        "type": "tpl",
        "tpl": "共有${total}条数据",
        "align": "right"
      },
      "pagination"
    ],
    "columns":[
      {
        "type": "text",
        "name": "periodicalId",
        "label": "期刊id"
      },
      {
        "type": "text",
        "name": "periodicalName",
