{
  "type": "page",
  "title": "分组列表",
  "body":{
    "type": "crud",
    "mode": "table",
    "api": {
      "method": "post",
      "url": "http://localhost:8080/userGroup/queryAllByPage.do",
      "data": {
        "page":"${page}",
        "pageSize":"${perPage|toInt}",
        "filterParams":[
          {
            "name": "groupName",
            "relation": "like",
            "value": "${groupName}"
          }
        ]
      }
    },
    "filter": {
      "title": "查找",
      "controls": [
        {
          "type": "text",
          "label":"分组名字",
          "name":"groupName"
        },
        {
          "type": "submit",
          "label": "搜索",
          "level": "primary"
        },
        {
          "type": "reset",
          "label": "重置",
          "level": "info"
        }
      ]
    },
    "columns":[
      {
        "type": "text",
        "name": "groupId",
        "label": "分组id"
      },
      {
        "type": "text",
        "name": "groupName",
        "label": "分组名字"
      },
      {
        "type": "text",
        "name": "groupLeaderId",
        "label": "组长id"
      },
      {
        "type": "text",
        "name": "groupLeaderName",
        "label": "组长姓名"
      },
      {
        "type": "text",
        "name": "groupPeopleNumber",
        "label": "分组人数"
      },
      {
        "type": "text",
        "name": "introduce",
        "label": "介绍"
      },
      {
        "type": "operation",
        "label": "操作",
        "buttons":[
          {
            "tooltip": "加入分组",
            "icon": "fa fa-users",
            "size": "md",
            "type": "button",
            "actionType": "dialog",
            "dialog":{
              "title": "加入分组",
              "body": {
                "type": "form",
                "title": "分组选项",
                "api":{
                  "url": "http://localhost:8080/user/goingGroup.do",
                  "method": "get",
                  "data": {
                    "userId": "${userId}",
                    "groupId": "${groupId}"
                  }
                },
                "actions": [
                  {
                    "type": "submit",
                    "label": "提交",
                    "primary": true
                  }
                ],
                "controls": {
                  "type": "select",
                  "name": "groupId",
                  "label": "加入分组",
                  "valueField": "groupId",
                  "labelField": "groupName",
                  "source": {
                    "method": "get",
                    "url": "http://localhost:8080/userGroup/getAll.do"
                  }
                }
              }
            }
          }
        ]
      }
    ]
  }
}